<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<FrameLayout android:layout_width="fill_parent" android:id="@+id/frameLayout1" android:layout_height="fill_parent">
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
<!--
			<TextView  
			android:id="@+id/hello"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"/>
-->
		<jp.hidetobara.pasteltouch.CanvasView
			android:id="@+id/canvasMain"
			android:layout_width="fill_parent" android:layout_height="fill_parent"></jp.hidetobara.pasteltouch.CanvasView>
	</LinearLayout>
	
    <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="fill_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/pen_change"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/color_0_0_0"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:background="@drawable/button_back">
        </ImageView>

        <ImageView
            android:id="@+id/file_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/button_back"
            android:contentDescription="file icon"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:src="@drawable/file2" >
		</ImageView>

        <ImageView
            android:id="@+id/canvas_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/file_change"
            android:background="@drawable/button_back"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:src="@drawable/random" />

        <ImageButton
            android:id="@+id/size_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pen_change"
            android:background="@drawable/button_back"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:src="@drawable/size_8" />
        
    </RelativeLayout>

</FrameLayout>

</LinearLayout>
